<script>
  //
  const header = document.querySelector("header")
  window.addEventListener("scroll", function () {
    x = window.pageYOffset
    if (x > 0) {
      header.classList.add("sticky")
    }
    else {
      header.classList.remove("sticky")
    }
  })

  //Hình ảnh trang chủ tự di chuyển sang ảnh khác và khi nhấn vào nút sẽ chuyển vào ảnh theo thứ tụ đó
  const imgPosition = document.querySelectorAll(".aspect-ratio-169 img");
  const imgContainer = document.querySelector(".aspect-ratio-169");
  const dotItem = document.querySelectorAll(".dot");
  let imgNumber = imgPosition.length;
  let Trangchu = 0;

  //console.log(imgposition);
  imgPosition.forEach(function (img, Trangchu) {
    img.style.left = Trangchu * 100 + "%";
    dotItem[Trangchu].addEventListener("click", function () {
      siler(Trangchu);
    });
  });
  function imgslide() {
    Trangchu++;
    console.log(Trangchu);
    if (Trangchu >= imgNumber) {
      Trangchu = 0;
    }
    siler(Trangchu);
  }
  function siler(Trangchu) {
    imgContainer.style.left = "-" + Trangchu * 100 + "%";
    const dotActive = document.querySelector(".active");
    dotActive.classList.remove("active");
    dotItem[Trangchu].classList.add("active");
  }
  setInterval(imgslide, 5000);
</script>

